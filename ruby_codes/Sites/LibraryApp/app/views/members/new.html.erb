<%= link_to("<< Back to login screen", {:controller => 'access',:action => 'login'}, :class => 'back-link') %>

<div class="New Member">
  <h2>Welcome New User. Please sign up!</h2>

  <%= form_for(:member, :url => {:action => 'create'}) do |f| %>

      <table summary="Member form fields">
        <tr>
          <th>Name</th>
          <td><%= f.text_field(:name) %></td>
        </tr>
        <tr>
          <th>Email ID</th>
          <td><%= f.text_field(:email_id) %></td>
        </tr>
        <tr>
          <th>Password</th>
          <td><%= f.password_field(:password) %></td>
        </tr>
        <tr>
          <th>Confirm Password</th>
          <td><%= f.password_field(:password_confirmation) %></td>
        </tr>
      </table>

      <div class="form-buttons">
        <%= submit_tag("Sign Up ") %>
      </div>

  <% end %>
</div>
