<% time_slots = {1=>"7AM to 9AM",2=>"9AM to 11AM",3=>"11AM to 1PM",
  4=>"1PM to 3PM",5=>"3PM to 5PM",6=>"5PM to 7PM",7=>"7PM to  9PM", 8=>"9PM to 11PM"}
%>
<div class="view index">

  <p>Bookings History</p>
  <br>
  <style>
    table, th, td{
      border: 1px solid black;
    }
  </style>
  <table style = "width:100%" class="listing" summary="Subject list">
    <tr class="header">

      <th>Room</th>

      <th>Date</th>
      <th>Time</th>
      <th>Actions</th>
    </tr>
    <% @bookings.each do |booking| %>
        <tr>
          <td><%= booking.room_number %></td>

          <td><%= booking.date %></td>
          <td><%= time_slots[booking.slot] %></td>
          <td class="actions">
            <%= link_to("Delete", {:controller => 'booking',:action => 'delete', :id => booking.id, :member_id=>@member_id}) %>
          </td>
        </tr>
    <% end %>
  </table>
</div>
